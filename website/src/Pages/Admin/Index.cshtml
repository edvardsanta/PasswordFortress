@page "Admin/Index"
@model PasswordFortressFront.Models.UserListViewModel
@{
    //ViewData["Title"] = "Registered Users";
}

<h1 class="bg-info text-white">Registered Users</h1>
<a asp-action="Create" class="btn btn-secondary">Create User</a>

@* @if (!string.IsNullOrEmpty(Model)) *@
@if (Model.Users != null)
{
    <table class="table table-sm table-bordered">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a class="btn btn-primary" asp-action="Update" asp-route-id="@user.Id">Update</a>
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
                <td>@Model</td>
            </tr>
        }
    </table>
}
else
{
    <p>No users found.</p>
}